@page "/Heartbeat"
@using HttpClients.ClientInterfaces
@using Domain.DTOs.HeartbeatDTO
@inject IHeartbeatService heartbeatService

<PageTitle>Heartbeat</PageTitle>

<div>
    <h3>Create Heartbeat</h3>
    <div class="form-group field mt-3">
        <label>Sound of Heartbeat:</label>
        <input class="mx-2" type="text" @bind="pulse" @bind:event="oninput"/>
        @if (!string.IsNullOrEmpty(resultMsg))
        {
            <label style="color: @color">@resultMsg</label>
        }
    </div>
    <div class="button-row my-2">
        <button @onclick="async ()=>{await Create();await Get();}" disabled="@(string.IsNullOrEmpty(pulse))" class="acceptbtn">Create</button>
    </div>
    @if (amountOfPulses != 0)
    {
        <div class="button-row">
            <p>The Amount of Pulses Created: @amountOfPulses.ToString()</p>
        </div>
    }

</div>

@code {
    private string pulse = "";
    private int amountOfPulses = 0;
    private string resultMsg = "";
    private string color = "";

    private async Task Create()
    {
        resultMsg = "";

        try
        {
            PulseCreationDTO pulseCreationDto = new PulseCreationDTO(pulse);
            await heartbeatService.CreateAsync(pulseCreationDto);
            resultMsg = $"Pulse '{pulse}' was successfully created!";
            pulse = "";
            color = "green";
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            resultMsg = e.Message;
            color = "red";
        }
    }

    private async Task Get()
    {
        amountOfPulses = 0;
        try
        {
            amountOfPulses=await heartbeatService.GetAsync();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
    }
}